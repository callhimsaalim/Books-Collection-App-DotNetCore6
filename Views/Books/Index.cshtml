@model IEnumerable<Books>
@{
    ViewData["Title"] = "Index";
}

<h2>School made Books look boring, but the below list will <strong>disagree</strong></h2>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
		</div>
        <div class="col-6 text-end">
            <a asp-controller="Books" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
			</a>
		</div>
	</div>
    <br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>No</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model){
            <tr>
                <td width="50%">
                    @obj.ID
                </td>
                <td width="30%">
                    @obj.Name
                </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Books" asp-action="Edit" asp-route-id="@obj.ID"
                           class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="Books" asp-action="Delete" asp-route-id="@obj.ID"
                           class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                        </div>
                    </td>
            </tr>
        }
    </tbody>

</table>
</div>
